[Unit]
Description=Duffy API server
DefaultDependencies=no
After=network.target
After=mysql.target

[Install]
WantedBy=multi-user.target

[Service]
Type=simple
User={{ duffy_user }}
Group={{ duffy_user }}
WorkingDirectory={{ duffy_app_basedir }}/duffy
ExecStart=FLASK_APP=duffy DUFFY_SETTINGS=/etc/duffy.conf {{ duffy_python_venv_path }}/bin/flask run -h 0.0.0.0 -p 8080
Restart=on-failure
RestartSec=3
